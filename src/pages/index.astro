---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import Button from '../components/Button.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TeamCard from '../components/TeamCard.astro';
import CTA from '../components/CTA.astro';
import Icon from '../components/Icon.astro';

const services = [
  {
    title: 'Anxiety & Depression',
    description: 'Evidence-based treatment combining CBT, mindfulness, and holistic approaches to help you find relief and build resilience.',
    icon: 'anxiety',
    href: '/services/anxiety-depression',
  },
  {
    title: 'Bariatric Surgery Support',
    description: 'Specialized counseling before and after bariatric surgery, helping you navigate the emotional and lifestyle changes.',
    icon: 'bariatric',
    href: '/services/bariatric-support',
  },
  {
    title: 'Trauma & PTSD',
    description: 'Compassionate, trauma-informed care using somatic therapy and CBT to help you heal from past experiences.',
    icon: 'trauma',
    href: '/services/trauma',
  },
  {
    title: 'Nutrition Counseling',
    description: 'Weight-inclusive, holistic nutrition therapy addressing eating disorders, GI issues, and the food-mood connection.',
    icon: 'nutrition',
    href: '/services/nutrition',
  },
];

const team = [
  {
    name: 'Kristen Ross',
    credentials: 'LPC',
    title: 'Owner & Lead Counselor',
    image: '/images/kristen-ross.png',
    bio: 'Over 14 years of experience in holistic health counseling, specializing in bariatric surgery support and lifestyle transformation.',
    specializations: ['Bariatric Support', 'Anxiety', 'Life Transitions'],
    href: '/team#kristen-ross',
  },
  {
    name: 'Michele Meyers',
    credentials: 'PsyD',
    title: 'Licensed Psychologist',
    image: '/images/michele-meyers.png',
    bio: '25 years specializing in weight loss, anxiety, depression, and emotional eating using CBT and solution-focused approaches.',
    specializations: ['Weight Loss', 'Anxiety', 'Depression'],
    href: '/team#michele-meyers',
  },
  {
    name: 'Meghan Pendleton',
    credentials: 'RD',
    title: 'Registered Dietitian',
    image: '/images/meghan-pendleton.png',
    bio: 'Weight-inclusive, trauma-informed dietitian specializing in eating disorders, GI health, and the nutrition-mental health connection.',
    specializations: ['Eating Disorders', 'GI Health', 'Maternal Health'],
    href: '/team#meghan-pendleton',
  },
];

const insurances = [
  { name: 'Blue Cross Blue Shield', logo: '/images/Blue-Cross-Blue-Shield-Logo-removebg-preview.avif' },
  { name: 'Blue Care Network', logo: '/images/blue+care+network.avif' },
  { name: 'Aetna', logo: '/images/1_Heart_Aetna_logo_sm_rgb_violet.png' },
  { name: 'United Healthcare', logo: '/images/UnitedHealthcare_(logo).svg.png' },
  { name: 'Cigna', logo: '/images/cigna-dentist-astoria.png' },
  { name: 'Priority Health', logo: '/images/priority-health-logo.avif' },
];
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary to-primary-dark overflow-hidden lg:min-h-[calc(100vh-64px)] lg:flex lg:items-center">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0">
      <img
        src="/images/assets/laurel_tree_counseling_homepage_(1).webp"
        alt="Woman in peaceful virtual therapy session representing online counseling services in Michigan"
        width="1920"
        height="1080"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-primary/90 to-primary-dark/85"></div>
    </div>

    <!-- Content -->
    <div class="container-custom relative z-10 py-10 md:py-14 lg:py-0 w-full">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-primary-light font-medium mb-6 tracking-wide uppercase text-sm">
          At the Root of Wellness
        </p>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-white mb-8 tracking-tight">
          Your Healing Journey Starts Here
        </h1>

        <p class="text-base md:text-xl lg:text-2xl text-white/90 leading-relaxed mb-10 max-w-3xl mx-auto">
          Individual virtual counseling for adults across Michigan. We use a holistic and evidence-based approach to help you work through anxiety, depression, trauma, and major life changes.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="https://laureltreecounselingllc.clientsecure.me" variant="secondary" size="lg" class="whitespace-nowrap" external>
            Book Free Consultation
          </Button>
          <a
            href="/services"
            class="btn px-8 py-4 text-lg min-h-[56px] border-2 border-white text-white bg-transparent hover:bg-white hover:text-primary hover:-translate-y-0.5 active:translate-y-0 focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2"
          >
            Explore Our Services
          </a>
        </div>

        <p class="mt-6 text-white/60 text-sm">
          No commitment required · Response within 24 hours
        </p>

        <!-- Trust indicators - clean horizontal layout -->
        <p class="mt-8 text-white/60 text-xs md:text-sm">
          Licensed Professionals · Telehealth Across MI · Most Insurance Accepted
        </p>
      </div>
    </div>
  </section>

  <!-- Who We Help Section - Asymmetric Layout -->
  <Section background="surface" id="who-we-help">
    <div class="grid lg:grid-cols-5 gap-12 lg:gap-16 items-center">
      <!-- Left column - Header (takes 2 cols) -->
      <div class="lg:col-span-2">
        <div class="accent-line">
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-text-primary mb-4">
            Who We Help
          </h2>
        </div>
        <p class="subtitle max-w-md mb-6">
          We believe healing is most effective when it addresses the whole person—not just symptoms. Our practice integrates emotional, physical, and spiritual well-being.
        </p>
        <img
          src="/images/assets/laurel_tree_counseling_15.webp"
          alt="Holistic approach to mental health and wellness"
          width="400"
          height="300"
          loading="lazy"
          class="w-full rounded-xl shadow-lg object-cover hidden lg:block"
        />
      </div>

      <!-- Right column - Features (takes 3 cols) -->
      <div class="lg:col-span-3 space-y-8">
        <div class="flex gap-4 fade-in fade-in-delay-1">
          <div class="flex-shrink-0 w-14 h-14 rounded-full bg-primary-light flex items-center justify-center">
            <Icon name="Heart" size={28} class="text-primary" />
          </div>
          <div>
            <h3 class="text-xl font-bold text-text-primary mb-2">Adults Seeking Support</h3>
            <p class="text-text-secondary">For anxiety, depression, relationship challenges, and personal growth.</p>
          </div>
        </div>

        <div class="flex gap-4 fade-in fade-in-delay-2">
          <div class="icon-container-gold">
            <Icon name="Scale" size={28} class="text-gold-dark" />
          </div>
          <div>
            <h3 class="text-xl font-bold text-text-primary mb-2">Bariatric Surgery Patients</h3>
            <p class="text-text-secondary">Pre and post-surgery support for the emotional journey of weight loss.</p>
          </div>
        </div>

        <div class="flex gap-4 fade-in fade-in-delay-3">
          <div class="flex-shrink-0 w-14 h-14 rounded-full bg-primary-light flex items-center justify-center">
            <Icon name="ShieldHeart" size={28} class="text-primary" />
          </div>
          <div>
            <h3 class="text-xl font-bold text-text-primary mb-2">Trauma Survivors</h3>
            <p class="text-text-secondary">Compassionate, trauma-informed care to help you heal and move forward.</p>
          </div>
        </div>

        <div class="flex gap-4 fade-in fade-in-delay-4">
          <div class="icon-container-gold">
            <Icon name="Apple" size={28} class="text-gold-dark" />
          </div>
          <div>
            <h3 class="text-xl font-bold text-text-primary mb-2">Nutrition & Eating Concerns</h3>
            <p class="text-text-secondary">Holistic nutrition counseling for eating disorders, GI issues, and wellness.</p>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Services Section -->
  <Section id="services">
    <div class="text-center mb-12">
      <div class="accent-line accent-line-center">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-text-primary mb-4">
          Our Services
        </h2>
      </div>
      <p class="subtitle max-w-2xl mx-auto">
        We offer a range of therapeutic services tailored to your unique needs, combining traditional and holistic approaches.
      </p>
    </div>

    <div class="grid sm:grid-cols-2 gap-6 max-w-4xl mx-auto stagger-children">
      {services.map((service) => (
        <ServiceCard {...service} class="fade-in" />
      ))}
    </div>

    <div class="text-center mt-10">
      <Button href="/services" variant="secondary">
        View All Services
      </Button>
    </div>
  </Section>

  <!-- Team Section -->
  <Section background="surface" id="team">
    <div class="text-center mb-12">
      <div class="accent-line accent-line-center">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-text-primary mb-4">
          Meet Our Team
        </h2>
      </div>
      <p class="subtitle max-w-2xl mx-auto">
        Our compassionate team brings decades of combined experience in mental health, nutrition, and holistic wellness.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-6 md:gap-8 stagger-children">
      {team.map((member) => (
        <TeamCard {...member} class="fade-in" />
      ))}
    </div>
  </Section>

  <!-- Insurance Section -->
  <section class="py-12 bg-background overflow-hidden" id="insurance">
    <div class="container-custom text-center mb-8">
      <div class="accent-line accent-line-center">
        <h2 class="text-2xl md:text-3xl font-heading font-bold text-text-primary mb-4">
          Insurance We Accept
        </h2>
      </div>
      <p class="text-text-secondary max-w-xl mx-auto">
        We accept most major insurance plans. Don't see yours? View our full list or contact us.
      </p>
    </div>

    <!-- Full-width scrolling logos -->
    <div class="scroll-container">
      <div class="flex animate-scroll gap-12 md:gap-16 py-4">
        {[...insurances, ...insurances].map((insurance) => (
          <div class="flex-shrink-0 flex items-center justify-center">
            <img
              src={insurance.logo}
              alt={insurance.name}
              class="h-5 md:h-7 w-auto object-contain opacity-60 hover:opacity-100 transition-all"
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Michigan Coverage Section -->
  <Section background="surface" id="locations">
    <div class="max-w-5xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <div class="accent-line accent-line-center">
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-text-primary mb-4">
            Serving All of Michigan
          </h2>
        </div>
        <p class="subtitle max-w-2xl mx-auto">
          From Metro Detroit to the Upper Peninsula, we provide telehealth therapy to adults in every corner of the state.
        </p>
      </div>

      <!-- Regions Grid -->
      <div class="grid md:grid-cols-3 gap-6 mb-10">
        <a href="/michigan" class="group p-6 bg-background-surface rounded-xl border border-border hover:border-primary hover:shadow-md transition-all text-center">
          <div class="w-12 h-12 rounded-full bg-primary-light flex items-center justify-center mx-auto mb-4 group-hover:bg-primary transition-colors">
            <Icon name="Building2" size={24} class="text-primary group-hover:text-white transition-colors" />
          </div>
          <h3 class="text-lg font-bold text-text-primary mb-2">Metro Detroit</h3>
          <p class="text-sm text-text-secondary">Detroit, Warren, Sterling Heights, Troy, Ann Arbor & more</p>
        </a>

        <a href="/michigan" class="group p-6 bg-background-surface rounded-xl border border-border hover:border-primary hover:shadow-md transition-all text-center">
          <div class="w-12 h-12 rounded-full bg-primary-light flex items-center justify-center mx-auto mb-4 group-hover:bg-primary transition-colors">
            <Icon name="MapPin" size={24} class="text-primary group-hover:text-white transition-colors" />
          </div>
          <h3 class="text-lg font-bold text-text-primary mb-2">West & Central</h3>
          <p class="text-sm text-text-secondary">Grand Rapids, Lansing, Kalamazoo, Battle Creek & more</p>
        </a>

        <a href="/michigan" class="group p-6 bg-background-surface rounded-xl border border-border hover:border-primary hover:shadow-md transition-all text-center">
          <div class="w-12 h-12 rounded-full bg-primary-light flex items-center justify-center mx-auto mb-4 group-hover:bg-primary transition-colors">
            <Icon name="Trees" size={24} class="text-primary group-hover:text-white transition-colors" />
          </div>
          <h3 class="text-lg font-bold text-text-primary mb-2">Northern & UP</h3>
          <p class="text-sm text-text-secondary">Traverse City, Marquette, Petoskey, Sault Ste. Marie & more</p>
        </a>
      </div>

      <!-- CTA -->
      <div class="text-center">
        <p class="text-text-secondary mb-4">We serve 50+ cities across all regions of Michigan</p>
        <Button href="/michigan" variant="primary">
          Find Your City
        </Button>
      </div>
    </div>
  </Section>

  <!-- CTA Section -->
  <CTA />
</BaseLayout>
