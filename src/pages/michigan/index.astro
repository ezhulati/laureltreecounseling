---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Section from '../../components/Section.astro';
import CTA from '../../components/CTA.astro';
import Icon from '../../components/Icon.astro';
import { cities } from '../../content/cities';

// Group cities by region
const regions = cities.reduce((acc, city) => {
  if (!acc[city.region]) {
    acc[city.region] = [];
  }
  acc[city.region].push(city);
  return acc;
}, {} as Record<string, typeof cities>);

// Define region order
const regionOrder = [
  'Metro Detroit',
  'West Michigan',
  'Central Michigan',
  'Southwest Michigan',
  'Northern Michigan',
  'Upper Peninsula',
  'East Michigan',
];
---

<BaseLayout
  title="Telehealth Therapy Across Michigan"
  description="Laurel Tree Counseling provides professional telehealth therapy services to adults across all of Michigan. Find mental health support in your city."
  ogImage="/images/assets/laurel_tree_counseling_11_(1).webp"
>
  <!-- Hero -->
  <section class="relative bg-gradient-to-br from-primary to-primary-dark overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="/images/assets/laurel_tree_counseling_11_(1).webp"
        alt="Telehealth therapy services available across all Michigan cities"
        width="1920"
        height="1080"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-primary/90 to-primary-dark/85"></div>
    </div>
    <div class="container-custom relative z-10 py-16 md:py-20">
      <div class="max-w-3xl">
        <div class="accent-line accent-line-white">
          <h1 class="text-4xl md:text-5xl font-heading font-bold text-white mb-6">
            Telehealth Therapy Across Michigan
          </h1>
        </div>
        <p class="text-xl text-white/90">
          No matter where you are in Michigan, quality mental health care is just a video call away. We serve adults statewide through secure, HIPAA-compliant telehealth sessions.
        </p>
      </div>
    </div>
  </section>

  <!-- Why Telehealth -->
  <Section>
    <div class="grid lg:grid-cols-5 gap-12 lg:gap-16 items-start">
      <div class="lg:col-span-2">
        <div class="accent-line">
          <h2 class="text-3xl font-heading font-bold text-text-primary mb-4">
            Why Telehealth Works
          </h2>
        </div>
        <p class="subtitle">
          Telehealth removes barriers to mental health care, making therapy accessible from the comfort and privacy of your own home.
        </p>
      </div>

      <div class="lg:col-span-3 space-y-6 stagger-children">
        <div class="flex gap-4 fade-in fade-in-delay-1">
          <div class="icon-container-gold">
            <Icon name="Home" size={28} class="text-gold-dark" />
          </div>
          <div>
            <h3 class="text-xl font-bold text-text-primary mb-2">Convenient</h3>
            <p class="text-text-secondary">No commute, no waiting rooms. Connect from home, work, or anywhere private.</p>
          </div>
        </div>

        <div class="flex gap-4 fade-in fade-in-delay-2">
          <div class="icon-container-gold">
            <Icon name="Lock" size={28} class="text-gold-dark" />
          </div>
          <div>
            <h3 class="text-xl font-bold text-text-primary mb-2">Secure</h3>
            <p class="text-text-secondary">HIPAA-compliant video sessions ensure your privacy and confidentiality.</p>
          </div>
        </div>

        <div class="flex gap-4 fade-in fade-in-delay-3">
          <div class="icon-container-gold">
            <Icon name="ShieldCheck" size={28} class="text-gold-dark" />
          </div>
          <div>
            <h3 class="text-xl font-bold text-text-primary mb-2">Same Quality Care</h3>
            <p class="text-text-secondary">Research shows telehealth therapy is just as effective as in-person sessions.</p>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Cities by Region -->
  <Section background="surface">
    <div class="mb-10">
      <div class="accent-line">
        <h2 class="text-3xl font-heading font-bold text-text-primary mb-4">
          Find Your City
        </h2>
      </div>
      <p class="subtitle max-w-2xl">
        We proudly serve residents in communities across Michigan. Select your city to learn more about our services in your area.
      </p>
    </div>

    <div class="space-y-8">
      {regionOrder.map((regionName) => {
        const regionCities = regions[regionName];
        if (!regionCities) return null;

        return (
          <div class="bg-background-elevated rounded-xl p-6">
            <h3 class="text-lg font-bold text-text-primary mb-4 flex items-center gap-2">
              <Icon name="MapPin" size={20} class="text-primary" />
              {regionName}
            </h3>
            <div class="flex flex-wrap gap-2">
              {regionCities.map((city) => (
                <a
                  href={`/michigan/${city.slug}`}
                  class="px-3 py-1.5 bg-background-surface border border-border rounded-full text-text-secondary hover:text-primary hover:border-primary hover:bg-primary-light transition-all text-sm"
                >
                  {city.name}
                </a>
              ))}
            </div>
          </div>
        );
      })}
    </div>
  </Section>

  <!-- Services Available -->
  <Section>
    <div class="grid lg:grid-cols-5 gap-12 lg:gap-16 items-start">
      <div class="lg:col-span-2">
        <div class="accent-line">
          <h2 class="text-3xl font-heading font-bold text-text-primary mb-4">
            Services Available Statewide
          </h2>
        </div>
        <p class="subtitle">
          All of our therapy services are available via telehealth to Michigan residents.
        </p>
      </div>

      <div class="lg:col-span-3 grid sm:grid-cols-2 gap-4 stagger-children">
        <a href="/services/anxiety-depression" class="card group fade-in fade-in-delay-1">
          <h3 class="text-lg font-bold text-text-primary mb-1 group-hover:text-primary transition-colors">
            Anxiety & Depression
          </h3>
          <p class="text-sm text-text-secondary">
            Evidence-based therapy for managing anxiety and depression symptoms.
          </p>
        </a>

        <a href="/services/bariatric-support" class="card group fade-in fade-in-delay-2">
          <h3 class="text-lg font-bold text-text-primary mb-1 group-hover:text-primary transition-colors">
            Bariatric Surgery Support
          </h3>
          <p class="text-sm text-text-secondary">
            Pre and post-surgery counseling from specialists with 14+ years experience.
          </p>
        </a>

        <a href="/services/trauma" class="card group fade-in fade-in-delay-3">
          <h3 class="text-lg font-bold text-text-primary mb-1 group-hover:text-primary transition-colors">
            Trauma & PTSD
          </h3>
          <p class="text-sm text-text-secondary">
            Trauma-informed care using somatic and evidence-based approaches.
          </p>
        </a>

        <a href="/services/nutrition" class="card group fade-in fade-in-delay-4">
          <h3 class="text-lg font-bold text-text-primary mb-1 group-hover:text-primary transition-colors">
            Nutrition Counseling
          </h3>
          <p class="text-sm text-text-secondary">
            Weight-inclusive nutrition support from our registered dietitian.
          </p>
        </a>
      </div>
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Virtual Therapy, Wherever You Are in Michigan"
    description="Book a free consultation to see how we can support youâ€”no matter where you live."
  />
</BaseLayout>
