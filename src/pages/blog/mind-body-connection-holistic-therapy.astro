    <Section>
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl font-heading font-bold text-text-primary mb-8">
          Related Articles
        </h2>
        <div class="grid md:grid-cols-3 gap-6">
          {relatedPosts.map((relatedPost) => (
            <BlogCard {...relatedPost} />
          ))}
        </div>
      </div>
    </Section>
  )}

  <!-- CTA -->
  <CTA
    title="Experience Whole-Person Care"
    description="Schedule a consultation to explore how holistic therapy can support your healing journey."
  />
</BaseLayout>
