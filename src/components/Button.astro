---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'accent';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  external?: boolean;
  type?: 'button' | 'submit' | 'reset';
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
  external = false,
  type = 'button',
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-body font-semibold rounded-md whitespace-nowrap transition-all duration-fast ease-out-expo focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2';

const variantClasses = {
  primary: 'bg-primary text-text-inverse hover:bg-primary-hover hover:-translate-y-0.5 hover:shadow-md active:translate-y-0 active:shadow-soft',
  secondary: 'bg-background-surface text-primary border border-border hover:border-primary hover:-translate-y-0.5 active:translate-y-0',
  outline: 'bg-transparent text-primary border-2 border-primary hover:bg-primary hover:text-text-inverse hover:-translate-y-0.5 active:translate-y-0',
  accent: 'bg-accent text-text-inverse hover:bg-accent-hover hover:-translate-y-0.5 hover:shadow-md active:translate-y-0',
};

const sizeClasses = {
  sm: 'px-4 py-2.5 text-sm min-h-[44px]',
  md: 'px-6 py-3 text-base min-h-[48px]',
  lg: 'px-8 py-4 text-lg min-h-[56px]',
};

const classes = [baseClasses, variantClasses[variant], sizeClasses[size], className].join(' ');

const externalProps = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

{href ? (
  <a href={href} class={classes} {...externalProps}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
