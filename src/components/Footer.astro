---
const currentYear = new Date().getFullYear();

// Organized footer navigation for better information architecture
const footerNav = {
  services: {
    title: 'Services',
    links: [
      { href: '/services/anxiety-depression', label: 'Anxiety & Depression' },
      { href: '/services/bariatric-support', label: 'Bariatric Support' },
      { href: '/services/trauma', label: 'Trauma & PTSD' },
      { href: '/services/nutrition', label: 'Nutrition Counseling' },
      { href: '/services/life-transitions', label: 'Life Transitions' },
      { href: '/services/relationship-challenges', label: 'Relationship Challenges' },
      { href: '/services', label: 'All Services' },
    ]
  },
  company: {
    title: 'Company',
    links: [
      { href: '/about', label: 'About Us' },
      { href: '/team', label: 'Our Team' },
      { href: '/blog', label: 'Insights' },
      { href: '/contact', label: 'Contact' },
    ]
  },
  resources: {
    title: 'Resources',
    links: [
      { href: '/insurance', label: 'Insurance' },
      { href: '/faq', label: 'FAQ' },
      { href: '/michigan', label: 'Michigan Locations' },
      { href: '/for-providers', label: 'For Providers' },
    ]
  }
};
---

<footer class="bg-primary-dark text-white">
  <div class="container-custom py-12 lg:py-16">
    <!-- Main Footer Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-10 lg:gap-8">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href="/" class="inline-block mb-4">
          <img
            src="/images/lltc_ogo-white.png"
            alt="Laurel Tree Counseling"
            width="160"
            height="50"
            loading="lazy"
            class="h-10 w-auto"
          />
        </a>
        <p class="text-white/70 text-sm max-w-xs mb-6">
          Holistic virtual counseling for adults across Michigan. We blend evidence-based therapy with whole-person wellness.
        </p>

        <!-- Contact Info -->
        <div class="space-y-2 mb-6">
          <a href="tel:586-244-8087" class="flex items-center gap-2 text-white/80 hover:text-white text-sm transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            586-244-8087
          </a>
          <a href="mailto:info@laureltreecounseling.com" class="flex items-center gap-2 text-white/80 hover:text-white text-sm transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            info@laureltreecounseling.com
          </a>
        </div>

        <!-- CTA Button -->
        <a
          href="https://laureltreecounselingllc.clientsecure.me"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-white text-primary font-medium px-5 py-2.5 rounded-md hover:bg-white/90 transition-colors text-sm whitespace-nowrap"
        >
          Book Free Consultation
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>

      <!-- Services Column -->
      <nav aria-label="Footer services navigation">
        <h3 class="text-white font-semibold text-sm mb-4">{footerNav.services.title}</h3>
        <ul class="space-y-2.5">
          {footerNav.services.links.map((link) => (
            <li>
              <a href={link.href} class="text-white/70 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Company Column -->
      <nav aria-label="Footer company navigation">
        <h3 class="text-white font-semibold text-sm mb-4">{footerNav.company.title}</h3>
        <ul class="space-y-2.5">
          {footerNav.company.links.map((link) => (
            <li>
              <a href={link.href} class="text-white/70 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Resources Column -->
      <nav aria-label="Footer resources navigation">
        <h3 class="text-white font-semibold text-sm mb-4">{footerNav.resources.title}</h3>
        <ul class="space-y-2.5">
          {footerNav.resources.links.map((link) => (
            <li>
              <a href={link.href} class="text-white/70 hover:text-white text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 mt-10 pt-6 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-white/50 text-xs">
        © {currentYear} Laurel Tree Counseling, LLC · All rights reserved
      </p>
      <p class="text-white/50 text-xs">
        Telehealth services across all of Michigan
      </p>
    </div>
  </div>
</footer>
