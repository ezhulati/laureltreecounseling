---
interface NavLink {
  href: string;
  label: string;
  description?: string;
}

interface NavDropdown {
  label: string;
  items: NavLink[];
  featured?: boolean; // For mega-menu style dropdowns
}

type NavItem = NavLink | NavDropdown;

function isDropdown(item: NavItem): item is NavDropdown {
  return 'items' in item;
}

// Consolidated navigation - 4 main items for cleaner header
const navItems: NavItem[] = [
  {
    label: 'About',
    items: [
      { href: '/about', label: 'About Us', description: 'Our mission and approach' },
      { href: '/team', label: 'Our Team', description: 'Meet our experienced clinicians' },
      { href: '/michigan', label: 'Michigan', description: 'Serving clients statewide' },
    ]
  },
  {
    label: 'Services',
    featured: true, // Enable mega-menu style
    items: [
      { href: '/services/anxiety-depression', label: 'Anxiety & Depression', description: 'Evidence-based treatment for lasting relief' },
      { href: '/services/bariatric-support', label: 'Bariatric Support', description: 'Pre & post-surgery counseling' },
      { href: '/services/trauma', label: 'Trauma & PTSD', description: 'Compassionate trauma-informed care' },
      { href: '/services/nutrition', label: 'Nutrition Counseling', description: 'Holistic nutrition therapy' },
      { href: '/services/life-transitions', label: 'Life Transitions', description: 'Support through major life changes' },
      { href: '/services/relationship-challenges', label: 'Relationship Challenges', description: 'Individual therapy for better connections' },
      { href: '/services', label: 'All Services â†’', description: 'View our complete offerings' },
    ]
  },
  {
    label: 'Resources',
    items: [
      { href: '/insurance', label: 'Insurance', description: 'Accepted plans and payment options' },
      { href: '/faq', label: 'FAQ', description: 'Common questions answered' },
      { href: '/blog', label: 'Blog', description: 'Mental health insights and tips' },
      { href: '/for-providers', label: 'For Providers', description: 'Referral information' },
    ]
  },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;

function isActive(item: NavItem): boolean {
  if (isDropdown(item)) {
    return item.items.some(subItem =>
      currentPath === subItem.href || currentPath.startsWith(subItem.href + '/')
    );
  }
  return currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href));
}
---

<header id="main-header" class="bg-background-surface shadow-soft sticky top-0 z-50 transition-transform duration-300">
  <nav class="container-custom" aria-label="Main navigation">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group flex-shrink-0" aria-label="Laurel Tree Counseling - Home">
        <img
          src="/images/logo.png"
          alt="Laurel Tree Counseling"
          width="180"
          height="60"
          loading="eager"
          fetchpriority="high"
          class="h-12 w-auto transition-transform duration-fast group-hover:scale-105"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-1">
        {navItems.map((item) => (
          isDropdown(item) ? (
            <div class="relative group">
              <button
                type="button"
                class:list={[
                  'px-3 py-1.5 text-sm font-medium rounded-md transition-all duration-fast flex items-center gap-1',
                  isActive(item)
                    ? 'text-primary bg-primary-light'
                    : 'text-text-secondary hover:text-primary hover:bg-primary-light/50'
                ]}
                aria-expanded="false"
                aria-haspopup="true"
              >
                {item.label}
                <svg class="w-2.5 h-2.5 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              {/* Enhanced mega-menu for featured dropdowns (Services) */}
              <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-fast">
                {item.featured ? (
                  <div class="bg-background-surface rounded-xl shadow-lg border border-border p-4 min-w-[320px]">
                    <div class="space-y-1">
                      {item.items.map((subItem, idx) => (
                        <a
                          href={subItem.href}
                          class:list={[
                            'block px-3 py-2.5 rounded-lg transition-colors group/item',
                            currentPath === subItem.href || currentPath.startsWith(subItem.href + '/')
                              ? 'bg-primary-light'
                              : 'hover:bg-background-elevated',
                            idx === item.items.length - 1 && 'border-t border-border mt-2 pt-3'
                          ]}
                          aria-current={currentPath === subItem.href ? 'page' : undefined}
                        >
                          <span class:list={[
                            'block text-sm font-semibold',
                            currentPath === subItem.href || currentPath.startsWith(subItem.href + '/')
                              ? 'text-primary'
                              : 'text-text-primary group-hover/item:text-primary'
                          ]}>
                            {subItem.label}
                          </span>
                          {subItem.description && (
                            <span class="block text-xs text-text-tertiary mt-0.5">
                              {subItem.description}
                            </span>
                          )}
                        </a>
                      ))}
                    </div>
                  </div>
                ) : (
                  <div class="bg-background-surface rounded-xl shadow-lg border border-border p-3 min-w-[220px]">
                    <div class="space-y-1">
                      {item.items.map((subItem) => (
                        <a
                          href={subItem.href}
                          class:list={[
                            'block px-3 py-2 rounded-lg transition-colors group/item',
                            currentPath === subItem.href || currentPath.startsWith(subItem.href + '/')
                              ? 'bg-primary-light'
                              : 'hover:bg-background-elevated'
                          ]}
                          aria-current={currentPath === subItem.href ? 'page' : undefined}
                        >
                          <span class:list={[
                            'block text-sm font-semibold',
                            currentPath === subItem.href || currentPath.startsWith(subItem.href + '/')
                              ? 'text-primary'
                              : 'text-text-primary group-hover/item:text-primary'
                          ]}>
                            {subItem.label}
                          </span>
                          {subItem.description && (
                            <span class="block text-xs text-text-tertiary mt-0.5">
                              {subItem.description}
                            </span>
                          )}
                        </a>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>
          ) : (
            <a
              href={item.href}
              class:list={[
                'px-3 py-1.5 text-sm font-medium rounded-md transition-all duration-fast flex items-center',
                isActive(item)
                  ? 'text-primary bg-primary-light'
                  : 'text-text-secondary hover:text-primary hover:bg-primary-light/50'
              ]}
              aria-current={currentPath === item.href ? 'page' : undefined}
            >
              {item.label}
            </a>
          )
        ))}

        <a
          href="https://laureltreecounselingllc.clientsecure.me"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary ml-3"
        >
          Book Free Consult
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="lg:hidden touch-target flex items-center justify-center rounded-md text-text-secondary hover:text-primary hover:bg-primary-light/50 transition-colors"
        aria-expanded="false"
        aria-controls="mobile-menu"
        aria-label="Open main menu"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="lg:hidden hidden overflow-hidden transition-all duration-base ease-out-expo"
    >
      <div class="py-4 space-y-1 border-t border-border">
        {/* Quick contact - prominent on mobile */}
        <a
          href="tel:586-244-8087"
          class="flex items-center gap-3 px-4 py-3 text-primary font-medium"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call 586-244-8087
        </a>

        <div class="border-t border-border my-2"></div>

        {/* Main navigation */}
        {navItems.map((item) => (
          isDropdown(item) ? (
            <div class="mobile-dropdown">
              <button
                type="button"
                class:list={[
                  'w-full flex items-center justify-between px-4 py-3 text-base font-medium rounded-md transition-colors touch-target',
                  isActive(item)
                    ? 'text-primary bg-primary-light'
                    : 'text-text-secondary hover:text-primary hover:bg-primary-light/50'
                ]}
                aria-expanded="false"
                data-dropdown-toggle
              >
                {item.label}
                <svg class="w-3 h-3 transition-transform dropdown-chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="hidden dropdown-content pl-4 space-y-1 pb-2">
                {item.items.map((subItem) => (
                  <a
                    href={subItem.href}
                    class:list={[
                      'block px-4 py-2.5 rounded-md transition-colors',
                      currentPath === subItem.href || currentPath.startsWith(subItem.href + '/')
                        ? 'text-primary bg-primary-light'
                        : 'text-text-secondary hover:text-primary hover:bg-primary-light/50'
                    ]}
                    aria-current={currentPath === subItem.href ? 'page' : undefined}
                  >
                    <span class="font-medium text-sm">{subItem.label}</span>
                    {subItem.description && (
                      <span class="block text-xs text-text-tertiary mt-0.5">{subItem.description}</span>
                    )}
                  </a>
                ))}
              </div>
            </div>
          ) : (
            <a
              href={item.href}
              class:list={[
                'block px-4 py-3 text-base font-medium rounded-md transition-colors touch-target',
                isActive(item)
                  ? 'text-primary bg-primary-light'
                  : 'text-text-secondary hover:text-primary hover:bg-primary-light/50'
              ]}
              aria-current={currentPath === item.href ? 'page' : undefined}
            >
              {item.label}
            </a>
          )
        ))}

        {/* Primary CTA */}
        <div class="pt-4 px-4">
          <a
            href="https://laureltreecounselingllc.clientsecure.me"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary w-full justify-center"
          >
            Book Free Consultation
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
      menuButton.setAttribute('aria-expanded', (!isExpanded).toString());
      mobileMenu.classList.toggle('hidden');

      // Update icon
      const svg = menuButton.querySelector('svg');
      if (svg) {
        if (isExpanded) {
          svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
          menuButton.setAttribute('aria-label', 'Open main menu');
        } else {
          svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
          menuButton.setAttribute('aria-label', 'Close main menu');
        }
      }
    });
  }

  // Mobile dropdown toggles
  const dropdownToggles = document.querySelectorAll('[data-dropdown-toggle]');
  dropdownToggles.forEach((toggle) => {
    toggle.addEventListener('click', () => {
      const parent = toggle.closest('.mobile-dropdown');
      if (!parent) return;

      const content = parent.querySelector('.dropdown-content');
      const chevron = toggle.querySelector('.dropdown-chevron');
      const isExpanded = toggle.getAttribute('aria-expanded') === 'true';

      toggle.setAttribute('aria-expanded', (!isExpanded).toString());
      content?.classList.toggle('hidden');
      chevron?.classList.toggle('rotate-180');
    });
  });

  // Scroll-aware header: hide on scroll down, show on scroll up
  const header = document.getElementById('main-header');
  let lastScrollY = window.scrollY;
  let ticking = false;

  function updateHeader() {
    const currentScrollY = window.scrollY;

    if (header) {
      // Only hide header after scrolling past 100px
      if (currentScrollY > 100) {
        if (currentScrollY > lastScrollY) {
          // Scrolling down - hide header
          header.style.transform = 'translateY(-100%)';
        } else {
          // Scrolling up - show header
          header.style.transform = 'translateY(0)';
        }
      } else {
        // Near top - always show header
        header.style.transform = 'translateY(0)';
      }
    }

    lastScrollY = currentScrollY;
    ticking = false;
  }

  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(updateHeader);
      ticking = true;
    }
  }, { passive: true });
</script>
